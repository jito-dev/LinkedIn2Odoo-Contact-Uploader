{
  "manifest_version": 3,
  "name": "LinkedIn â†’ Odoo Contact Uploader",
  "version": "1.0",
  "description": "Upload LinkedIn profile info to Odoo contacts, with Campaign Management and quick-create.",
  "permissions": [
    "activeTab", 
    "scripting", 
    "storage",
    "webNavigation"
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "options.html", 
        "options.js", 
        "campaigns.js", 
        "logo.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
